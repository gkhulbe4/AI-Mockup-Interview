{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@/*": ["./*"],
      "/*": ["./node_modules/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/dashboard/interview/[mockId]/start/page.jsx",
    "app/(main)/howitworks/page.jsx",
    "app/(main)/dashboard/interview/[mockId]/layout.jsx",
    "app/api/webhook/route.js",
    "app/(main)/home/page.jsx"
  ],
  "exclude": ["node_modules"]
}
